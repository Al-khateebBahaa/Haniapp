<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="#F6F6FB"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layoutDirection="rtl"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="طلب الأجهزة الكهربائية"
                android:textColor="@color/main_color"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="التاريخ"
                    android:textColor="@color/black"
                    android:textSize="12sp" />


                <View
                    android:id="@+id/divider3"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:background="?android:attr/listDivider"
                    android:foreground="@color/main_color" />


                <TextView
                    android:id="@+id/remain_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="باقي الوقت"
                    android:textColor="@color/secondary_color"
                    android:textSize="12sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_location"
                android:drawableTint="@color/secondary_color"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="من العنوان التالي إلى العنوان التالي"
                android:textColor="@color/black"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/agentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_deliverd_to"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="إلى العنوان التالي"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </LinearLayout>



            <TextView
                android:id="@+id/orderNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="تفاصيل"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!--

            <TextView
                android:id="@+id/orderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="يتم الإرسال"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/cancel_but"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/veiw_all_button"
                android:gravity="center"
                android:text="إلغاء"
                android:textColor="@color/white" />

        -->
    </LinearLayout>
</android.support.v7.widget.CardView>
